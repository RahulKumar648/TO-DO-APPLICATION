<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <link rel='stylesheet' type='text/css' media='screen' href='../assets/css/home.css'>
</head>
<body>
    <!-- card 1 -->
    <div class="card">
        <div class="card-header text-center fs-1">
            TO-DO APP
        </div>
    </div>
    <!-- card 2 -->
    <div class="card">
        <div class="card-body">
            <p>Description</p>
            <div class="input-group flex-nowrap">
                <input type="text" class="form-control" placeholder="What do you need to do ?" aria-label="Username" aria-describedby="addon-wrapping">
            </div>
        </div>
    </div>
    <!-- card 3 -->
    <div class="card">
        <div class="card-body">
            <div class="row">
                <p>CATEGORY</p>
                <div class="col">
                    <div class="dropdown">
                        <select >
                            <option>Choose a category</option>
                            <option value="1">Presonal</option>
                            <option value="2">Work</option>
                            <option value="3">School</option>
                            <option value="3">Cleaning</option>
                            <option value="3">Other</option>
                          </select>
                    </div>                  
                </div>
                <div class="col">
                    <div>
                        <p id="due-date">DUE DATE</p>
                        <input type="date">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- card 4 -->
    <div class="card">
        <div class="card-body text-center">
            <button type="button" class="btn btn-secondary btn-lg"><i class="fas fa-plus"></i> &nbsp;ADD TASK</button>&emsp;
            <button type="button" class="btn btn-danger btn-lg"><i class="fas fa-trash-alt"></i> &nbsp; DELETE TASK</button>
        </div>
    </div>
    <!-- card 5 -->
    <div class="task-list">
        <div class="card">
            <div class="card-body">
                <div class="input-group mb-3">
                    <div class="input-group-text">
                        <input class="form-check-input mt-0" type="checkbox" value="" aria-label="Checkbox for following text input">
                    </div>    
                    <p style="margin-left: 20%;">Annual report submission deadline</p>
                    <button  type="button" class="btn btn-info text-end margin-left:20%" style="margin-left: 35%;">WORK</button>
                </div>
            </div>
        </div>
    </div>
    <!-- card 6 -->
    <div class="task-list">
        <%for (let i of task-list){%>
            <div class="card">
                <div class="card-body"> 
                    <div class="input-group mb-3">
                        <div class="input-group-text">
                            <input class="form-check-input mt-0" type="checkbox" value="" aria-label="Checkbox for following text input">
                        </div>    
                        <p style="margin-left: 20%;"><%=i.task-name></p>
                        <button  type="button" class="btn btn-info text-end margin-left:20%" style="margin-left: 35%;">i.task-category</button>
                    </div>
                </div>
            </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</body>
</html>