<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TD-DO</title>
    <!-- bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <!-- font-awesome CdN -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <!-- css link -->
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <div id="all-card"><!-- <style="min-width: 638px" -->
            <!-- card for heading of application -->
            <form id="create-task" action="/create-task" method="POST">
                <div class="card">
                    <div class="card-header text-center fs-1"style="text-emphasis-style: unset;">
                        <h1 id="heaading">TO-DO APP</h1>
                    </div>
                </div>
                <!-- card for description  -->
                <div class="card">
                    <div class="card-body">
                        <p>Description</p>
                        <div class="input-group flex-nowrap">
                            <input type="text" class="form-input" name="name" class="form-control"required placeholder="What do you need to do ?" aria-label="Username" aria-describedby="addon-wrapping" style="width: 100%;border:none; ">
                        </div>
                    </div>
                </div>
                <!-- card for category -->
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <p class="display-6">CATEGORY</p>
                            <div class="col">
                                <div class="dropdown">
                                    <input class="form-input" type="text" name="category" placeholder="Category"required list='listid'>
                                        <datalist id="listid">
                                            <option value="Presonal"></option>
                                            <option value="Work"></option>
                                            <option value="School"></option>
                                            <option value="Cleaning"></option>
                                            <option value="Other"></option>
                                        </datalist> 
                                </div>                  
                            </div>
                            <!-- for taking input due date  -->
                            <div class="col">
                                <div id="due-date">
                                    <p class="display-6">DUE DATE</p>
                                    <input class="form-input"  type="date" name="date" placeholder="Date" required>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- card for add task -->
                <div class="card">
                    <div class="card-body text-center">
                        <button type="submit" id="add-task" class="btn btn-secondary btn-lg"><i class="fas fa-plus" value="ADD TASK"></i> &nbsp;ADD TASK</button>&emsp;
                    </div>
                </div>
            </form>
            <!-- div for adding task list  -->
            <div>
                <div class="task-list">
                    <form action="/delete-task" method="GET">
                        <%for (let i of task_list){%>
                            <div class="card">
                                <div class="card-body"> 
                                    <div class="input-group mb-3">
                                        <div class="input-group-text">
                                            <input class="form-check-input mt-0" type="checkbox"name="<%= i._id %>">
                                        </div>    
                                        <p class="name" id="description-name"><%=i.name%></p>
                                        <p id="description-date"><%= i.date%></p>
                                        <button  type="button" id="category-btn" class="btn btn-info text-end margin-left:20% task-category" style="margin-left:17%;"><%=i.category%></button>
                                        <button type="submit" id="delete-btn" class="btn btn-danger btn-lg"><i class="fas fa-trash-alt" value="DELETE"></i></button>
                                    </div>
                                </div>
                            </div>
                        <%}%>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</body>
</html>



